<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
  http://www.springframework.org/schema/rabbit
  http://www.springframework.org/schema/rabbit/spring-rabbit-1.6.xsd">

    <bean id="notifyRequestMarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="contextPath" value="uk.gov.ons.ctp.response.notify.message.notify" />
    </bean>

    <bean id="notifyRequestMarshallingMessageConverter" class="org.springframework.amqp.support.converter.MarshallingMessageConverter">
        <constructor-arg ref="notifyRequestMarshaller" />
        <property name="contentType" value="text/xml" />
    </bean>

    <rabbit:template id="notifyRequestRabbitTemplate" connection-factory="connectionFactory" exchange="notify-outbound-exchange" routing-key="Notify.NotifyRequest.binding"
                     message-converter="notifyRequestMarshallingMessageConverter" channel-transacted="true" mandatory="true"/>
</beans>
