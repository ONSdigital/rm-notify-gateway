<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

    <bean id="actionInstructionReceiver" class="uk.gov.ons.ctp.response.notify.message.impl.ActionInstructionReceiverImpl"/>

    <bean id="actionInstructionPublisher" class="uk.gov.ons.ctp.response.notify.message.impl.ActionInstructionPublisherImpl"/>

    <bean id="actionFeedbackPublisher" class="uk.gov.ons.ctp.response.notify.message.impl.ActionFeedbackPublisherImpl"/>

    <bean id="notificationClient" class="uk.gov.service.notify.NotificationClient">
        <constructor-arg name="apiKey" value="${API_KEY}" />
    </bean>

    <bean id="notifyService" class="uk.gov.ons.ctp.response.notify.service.impl.NotifyServiceImpl"/>

    <bean id="actionFeedbackMessageListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="destinationName" value="Action.Notifications" />
        <property name="messageListener" ref="messageListener" />
        <property name="maxConcurrentConsumers" value="1" />
        <property name="concurrentConsumers" value="1" />
        <property name="receiveTimeout" value="5000" />
        <property name="recoveryInterval" value="60000" />
        <property name="autoStartup" value="true" />
    </bean>

    <bean id="messageListener" class="uk.gov.ons.ctp.response.notify.utility.ActionMessageListener"/>
</beans>

